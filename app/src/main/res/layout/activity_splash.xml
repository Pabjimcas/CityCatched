<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorAccent">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/city_catched"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/salamanca"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/salamanca"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"/>

    <ProgressBar
        android:layout_marginTop="20dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_below="@id/salamanca"
        android:progressTint="@color/primary_text"
        android:progressBackgroundTint="@color/primary_text"/>
</RelativeLayout>
